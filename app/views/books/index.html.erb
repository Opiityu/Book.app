<h1>Books</h1>
<% @book.each do |book| %>
  <div class="book_box">
    <span class="book-title"><%= book.title %></span>
    <span class="book-body"><%= book.body %></span>
    
  </div>
<% end %>






<%= form_with model: Book.new do |f| %>
  <h2>New book</h2>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  <% end %>
