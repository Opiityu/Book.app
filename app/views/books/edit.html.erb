<h1>Editing Book</h1>

<% if @book.errors.any? %>
    <%= @book.errors.count %>errors
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>


<%= form_with model: @book do |f| %>
<div class="edit-form">
    <div class="input-title">
      <h4>title</h4>
      <%= f.text_field :title %>
    </div>
    
    <div class="input-body">
      <h4>body</h4>
      <%= f.text_area :body %>
    </div>
    
    <div class="input-post">

      <%= f.submit 'Update Book' %>
      
    </div>
</div>

  
<div class="link">
  <span class="show-button"><%= link_to "Show", book_path(@book.id) %></span>
  <span>|</span>
  <span class="back-button"><%= link_to "Back", "/books" %></span>
</div>
  
<% end %>